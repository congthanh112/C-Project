@using Movify.Models; 

@{
    var customer = (Customer) @ViewBag.customer;
}
<p>Welcome @customer.name </p>

<div class="row">

    <div class="col-md-10 mx-auto">

        <div class="text-center">
            <h1>Movie List</h1>
            <div>
                @TempData["msgresponse"]
            </div>
        </div>

        <div class="col-md-8 mx-auto">
            <form asp-action="SearchMovies" asp-controller="Feed" method="get" class="form-inline">
                <div class="form-group mx-2">
                   <input class="form-control" type="text" name="pat_name" value="@ViewData["pat_name"]" placeholder="Enter title to search" />
                </div>
                <div class="form-group mx-2">
                    <select name="ordered_by" class="form-control">
                        <option value="latest">Latest</option>
                        <option value="best seller">Best Seller</option>
                    </select>
                </div>
                <div>
                    <input type="submit" class="btn btn-primary" value="Search" />
                </div>
            </form>
        </div>

        <div class="w-100 mx-auto mt-5">
            <div class="row">
                @foreach (var movie in ViewBag.movies)
                {
                    <div class="col-sm-4">
                        <div class="card">
                            <img src="@movie.posterURL" alt="Poster Img" class="card-img-top" />
                            <div class="card-body">
                                <h3><a href="/Feed/MovieDetail/@movie.id">@movie.name</a></h3>
                            </div>
                        </div>
                    </div>

                }
            </div>
                          
        </div>
    </div>
</div>

